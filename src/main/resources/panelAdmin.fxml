<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.reservasuq.controladores.PanelAdminControlador"
      spacing="10" style="-fx-padding: 10;">

    <!-- Título principal del panel -->
    <Label text="Panel de Administración" alignment="CENTER">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>

    <!-- Sección de Gestión de Instalaciones con acciones -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Gestionar Instalaciones" onAction="#mostrarGestionInstalaciones"/>
        <Button text="Ver Reservas" onAction="#mostrarReservas"/>
    </HBox>

    <!-- Tablas colocadas una al lado de la otra -->
    <HBox spacing="20">
        <!-- Tabla de Instalaciones -->
        <VBox spacing="5" style="-fx-padding: 10;">
            <Label text="Instalaciones"/>
            <TableView fx:id="tablaInstalaciones" prefWidth="300">
                <columns>
                    <TableColumn text="Instalación" fx:id="colInstalacion" prefWidth="150"/>
                    <TableColumn text="Capacidad" fx:id="colAforo" prefWidth="75"/>
                    <TableColumn text="Costo" fx:id="colCosto" prefWidth="75"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Tabla de Reservas -->
        <VBox spacing="5" style="-fx-padding: 10;">
            <Label text="Reservas Realizadas"/>
            <TableView fx:id="tablaReservas" prefWidth="300">
                <columns>
                    <TableColumn text="Persona" fx:id="colPersonaReserva" prefWidth="100"/>
                    <TableColumn text="Instalación" fx:id="colInstalacionReserva" prefWidth="100"/>
                    <TableColumn text="Fecha y Hora" fx:id="colFechaHoraReserva" prefWidth="100"/>
                    <TableColumn text="Costo" fx:id="colCostoReserva" prefWidth="75"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>
</VBox>
