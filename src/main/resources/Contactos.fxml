<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.seguimiento2.controladores.ContactoControlador">

  <!-- Left side Labels and Inputs -->
  <Label layoutX="20.0" layoutY="35.0" text="Nombre:" />
  <TextField fx:id="txtNombre" layoutX="120.0" layoutY="30.0" minWidth="270.0" />

  <Label layoutX="20.0" layoutY="85.0" text="Apellido:" />
  <TextField fx:id="txtApellido" layoutX="120.0" layoutY="80.0" minWidth="270.0" />

  <Label layoutX="20.0" layoutY="135.0" text="Teléfono:" />
  <TextField fx:id="txtTelefono" layoutX="120.0" layoutY="130.0" minWidth="270.0" />

  <Label layoutX="20.0" layoutY="185.0" text="Correo:" />
  <TextField fx:id="txtCorreo" layoutX="120.0" layoutY="180.0" minWidth="270.0" />

  <Label layoutX="20.0" layoutY="235.0" text="Cumpleaños:" />
  <DatePicker fx:id="dateCumpleanos" layoutX="120.0" layoutY="230.0" minWidth="270.0" />

  <Label layoutX="20.0" layoutY="285.0" text="URL Foto:" />
  <TextField fx:id="txtUrlFoto" layoutX="120.0" layoutY="280.0" minWidth="270.0" />

  <!-- Search Section -->
  <Label layoutX="20.0" layoutY="340.0" text="Buscar por:" />
  <ComboBox fx:id="comboBuscarPor" layoutX="120.0" layoutY="335.0" minWidth="150.0" />
  <TextField fx:id="txtBuscar" layoutX="280.0" layoutY="335.0" minWidth="150.0" />
  <Button layoutX="440.0" layoutY="335.0" onAction="#buscarContacto" text="Buscar" />

  <!-- Buttons Section -->
  <Button layoutX="20.0" layoutY="400.0" onAction="#agregarContacto" prefHeight="32.0" prefWidth="115.0" text="Agregar" />
  <Button layoutX="145.0" layoutY="400.0" onAction="#editarContacto" prefHeight="32.0" prefWidth="115.0" text="Editar" />
  <Button layoutX="270.0" layoutY="400.0" onAction="#eliminarContacto" prefHeight="32.0" prefWidth="115.0" text="Eliminar" />

  <!-- TableView to the right side -->
  <TableView fx:id="tablaContactos" layoutX="500.0" layoutY="30.0" prefHeight="400.0" prefWidth="540.0">
    <columns>
      <TableColumn fx:id="colNombre" prefWidth="180.0" text="Nombre" />
      <TableColumn fx:id="colApellido" prefWidth="180.0" text="Apellido" />
      <TableColumn fx:id="colTelefono" prefWidth="180.0" text="Teléfono" />
    </columns>
  </TableView>

</AnchorPane>
