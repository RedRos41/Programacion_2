<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.proyectofinal.controladores.BilleteraControlador"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Billetera" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Saldo Actual:"/>
        <Label fx:id="lblSaldoActual" text="0.0" style="-fx-font-weight: bold;"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Monto a Recargar:"/>
        <TextField fx:id="txtMontoRecarga" promptText="Ingrese el monto"/>
    </HBox>
    <Button text="Recargar" onAction="#recargarSaldo"/>
</VBox>
