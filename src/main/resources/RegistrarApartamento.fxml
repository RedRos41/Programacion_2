<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.proyectofinal.controladores.RegistrarApartamentoControlador">
    <children>
        <VBox spacing="10" alignment="CENTER" prefWidth="400" prefHeight="650">
            <Label text="Registrar Apartamento" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TextField fx:id="txtNombre" promptText="Nombre del Apartamento"/>
            <ComboBox fx:id="comboCiudad" promptText="Seleccione Ciudad"/>
            <TextField fx:id="txtDireccion" promptText="Dirección"/>
            <TextArea fx:id="txtDescripcion" promptText="Descripción" prefRowCount="3"/>

            <TextField fx:id="txtPrecio" promptText="Precio por Noche"/>
            <TextField fx:id="txtCapacidad" promptText="Capacidad Máxima"/>
            <ComboBox fx:id="comboServicio" promptText="Seleccione Servicio"/>
            <TextField fx:id="txtAdministracion" promptText="Costo de Administración"/>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnSeleccionarImagen" text="Seleccionar Imagen" onAction="#seleccionarImagen"/>
                <Label fx:id="lblRutaImagen" text="No se seleccionó ninguna imagen"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnRegistrar" text="Registrar" onAction="#registrarApartamento"/>
                <Button fx:id="btnCancelar" text="Cancelar" onAction="#cancelarRegistro"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
