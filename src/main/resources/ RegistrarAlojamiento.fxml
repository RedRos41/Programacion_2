<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.proyectofinal.controladores.RegistrarAlojamientoControlador" spacing="10" style="-fx-padding: 20;">
    <Label text="Registrar Alojamiento" style="-fx-font-size: 18px; -fx-font-weight: bold;" alignment="CENTER"/>

    <GridPane hgap="10" vgap="10">
        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNombre" promptText="Ingrese el nombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Tipo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboTipo" promptText="Seleccione el tipo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Ciudad:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboCiudad" promptText="Seleccione la ciudad" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Precio por Noche:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPrecio" promptText="0.0" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Capacidad Máxima:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCapacidad" promptText="0" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Descripción:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextArea fx:id="txtDescripcion" promptText="Ingrese una descripción" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.rowSpan="2"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Registrar" onAction="#registrarAlojamiento"/>
        <Button text="Cancelar" onAction="#cancelar"/>
    </HBox>

    <Label fx:id="lblMensaje" text="" style="-fx-text-fill: red;" alignment="CENTER"/>
</VBox>
