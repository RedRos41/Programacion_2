<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.proyectofinal.controladores.AdminControlador"
            prefHeight="400.0" prefWidth="600.0">

    <BorderPane>

        <!-- Cabecera -->
        <top>
            <Label text="Panel de Administración" style="-fx-font-size: 18px; -fx-font-weight: bold;" alignment="CENTER" />
        </top>

        <!-- Menú Lateral -->
        <left>
            <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                <Button text="Gestión de Alojamientos" onAction="#mostrarGestionAlojamientos" />
                <Button text="Alojamientos Populares" onAction="#mostrarAlojamientosPopulares" />
                <Button text="Gráfica Rentabilidad" onAction="#mostrarGraficaRentabilidad" />
                <Button text="Cambiar Contraseña" onAction="#mostrarGestionAdmin" />
                <Button text="Gráficas de Reservas" onAction="#mostrarGraficasReservas" />
            </VBox>
        </left>

        <!-- Contenido Principal -->
        <center>
            <StackPane fx:id="panelContenido">

                <!-- Gestión de Alojamientos -->
                <VBox fx:id="panelGestionAlojamientos" alignment="CENTER" spacing="20" visible="false">
                    <Label text="Gestión de Alojamientos" style="-fx-font-size: 16px;" />
                    <HBox spacing="10">
                        <Button text="Crear" onAction="#abrirCrearAlojamiento" />
                        <Button text="Editar" onAction="#abrirEditarAlojamiento" />
                        <Button text="Eliminar" onAction="#abrirEliminarAlojamiento" />
                    </HBox>
                    <TableView fx:id="tablaAlojamientos">
                        <columns>
                            <TableColumn text="ID" fx:id="columnaIdAlojamiento" />
                            <TableColumn text="Nombre" fx:id="columnaNombreAlojamiento" />
                            <TableColumn text="Ciudad" fx:id="columnaCiudadAlojamiento" />
                            <TableColumn text="Precio" fx:id="columnaPrecioAlojamiento" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Alojamientos Populares -->
                <VBox fx:id="panelAlojamientosPopulares" alignment="CENTER" spacing="20" visible="false">
                    <Label text="Alojamientos Más Populares" style="-fx-font-size: 16px;" />
                    <TableView fx:id="tablaAlojamientosPopulares">
                        <columns>
                            <TableColumn text="Nombre" fx:id="columnaNombrePopular" />
                            <TableColumn text="Ciudad" fx:id="columnaCiudadPopular" />
                            <TableColumn text="Reservas" fx:id="columnaReservasPopular" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Gráfica Rentabilidad -->
                <VBox fx:id="panelGraficaRentabilidad" alignment="CENTER" spacing="20" visible="false">
                    <Label text="Alojamientos Más Rentables" style="-fx-font-size: 16px;" />
                    <PieChart fx:id="graficaRentabilidad" />
                </VBox>

                <!-- Cambio de Contraseña -->
                <VBox fx:id="panelGestionAdmin" alignment="CENTER" spacing="20" visible="false">
                    <Label text="Cambiar Contraseña" style="-fx-font-size: 16px;" />
                    <TextField fx:id="txtEmail" promptText="Ingrese su email" />
                    <TextField fx:id="txtCodigo" promptText="Ingrese el código enviado a su correo" />
                    <PasswordField fx:id="txtNuevaContraseña" promptText="Ingrese su nueva contraseña" />
                    <Button text="Cambiar Contraseña" onAction="#cambiarContraseña" />
                </VBox>

                <!-- Gráficas de Reservas -->
                <VBox fx:id="panelGraficasReservas" alignment="CENTER" spacing="20" visible="false">
                    <Label text="Gráficas de Reservas" style="-fx-font-size: 16px;" />
                    <BarChart fx:id="barChartReservas">
                        <xAxis>
                            <CategoryAxis fx:id="xAxisReservas" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="yAxisReservas" />
                        </yAxis>
                    </BarChart>
                </VBox>

            </StackPane>
        </center>
    </BorderPane>
</AnchorPane>
