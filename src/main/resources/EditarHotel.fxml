<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox spacing="10" alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.proyectofinal.controladores.EditarHotelControlador">
    <Label text="Editar Hotel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <GridPane hgap="10" vgap="10">
        <Label text="Nombre:" />
        <TextField fx:id="txtNombre" />

        <Label text="Ciudad:" GridPane.rowIndex="1" />
        <ComboBox fx:id="comboCiudad" GridPane.rowIndex="1" />

        <Label text="Descripción:" GridPane.rowIndex="2" />
        <TextArea fx:id="txtDescripcion" GridPane.rowIndex="2" GridPane.columnSpan="2" prefHeight="80" />

        <Label text="Precio por Noche:" GridPane.rowIndex="3" />
        <TextField fx:id="txtPrecio" GridPane.rowIndex="3" />

        <Label text="Capacidad Máxima:" GridPane.rowIndex="4" />
        <TextField fx:id="txtCapacidad" GridPane.rowIndex="4" />

        <Label text="Servicio:" GridPane.rowIndex="5" />
        <ComboBox fx:id="comboServicio" GridPane.rowIndex="5" />
    </GridPane>
    <Label fx:id="lblMensaje" textFill="red" />
    <HBox spacing="10">
        <Button fx:id="btnGuardar" text="Guardar" onAction="#guardarCambios" />
        <Button fx:id="btnCancelar" text="Cancelar" onAction="#cancelarEdicion" />
    </HBox>
</VBox>
