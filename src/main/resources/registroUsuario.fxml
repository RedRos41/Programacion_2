<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.reservasuq.controladores.RegistroUsuarioControlador"
      spacing="10.0"
      alignment="CENTER"
      prefWidth="400.0"
      prefHeight="300.0">

    <Label text="Registro de Usuario" style="-fx-font-size: 18;" />

    <TextField fx:id="txtCedula" promptText="Cédula" />
    <TextField fx:id="txtNombre" promptText="Nombre Completo" />
    <TextField fx:id="txtEmail" promptText="Correo Electrónico" />

    <ComboBox fx:id="comboTipoPersona" promptText="Tipo de Usuario" prefWidth="200.0" />

    <PasswordField fx:id="txtPassword" promptText="Contraseña" />

    <Button text="Registrar"
            onAction="#registrarUsuario"
            prefWidth="200.0"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />

</VBox>
