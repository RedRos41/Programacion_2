<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: #f5f5f5;" fx:controller="co.edu.uniquindio.proyectofinal.controladores.PanelClienteControlador">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" prefWidth="1000.0" prefHeight="700.0" style="-fx-padding: 20;">

            <!-- Header -->
            <Label text="Panel de Cliente" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2a2a2a;" />

            <!-- Acciones principales -->
            <HBox spacing="20.0" alignment="CENTER" style="-fx-padding: 10;">
                <Button text="Gestionar Cliente" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#gestionarCliente" />
                <Button text="Realizar Reserva" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#realizarReserva" />
                <Button text="Billetera" style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-font-weight: bold;" onAction="#abrirBilletera" />
            </HBox>

            <!-- Información del saldo -->
            <Label fx:id="lblSaldoDisponible" text="Saldo: $0.00" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" />

            <!-- Secciones principales -->
            <HBox spacing="20.0" alignment="TOP_CENTER" prefHeight="600.0">

                <!-- Panel izquierdo: Búsqueda y Resultados -->
                <VBox spacing="20.0" alignment="TOP_CENTER" prefWidth="500.0">

                    <!-- Buscar Alojamientos -->
                    <TitledPane text="Buscar Alojamientos" expanded="true" style="-fx-font-size: 16px; -fx-font-weight: bold;">
                        <VBox spacing="10.0" style="-fx-padding: 10;">
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Nombre:" style="-fx-font-size: 14px;" />
                                <TextField fx:id="txtBuscarNombre" promptText="Ingrese el nombre del alojamiento" style="-fx-background-color: #f9f9f9;" />
                            </HBox>
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Tipo:" style="-fx-font-size: 14px;" />
                                <ComboBox fx:id="comboTipoAlojamiento" promptText="Seleccione el tipo" style="-fx-background-color: #f9f9f9;" />
                            </HBox>
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Ciudad:" style="-fx-font-size: 14px;" />
                                <ComboBox fx:id="comboCiudadAlojamiento" promptText="Seleccione la ciudad" style="-fx-background-color: #f9f9f9;" />
                            </HBox>
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Precio Mín:" style="-fx-font-size: 14px;" />
                                <TextField fx:id="txtPrecioMin" promptText="0.0" style="-fx-background-color: #f9f9f9;" />
                                <Label text="Precio Máx:" style="-fx-font-size: 14px;" />
                                <TextField fx:id="txtPrecioMax" promptText="0.0" style="-fx-background-color: #f9f9f9;" />
                            </HBox>
                            <Button text="Buscar" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#buscarAlojamientos" />
                        </VBox>
                    </TitledPane>

                    <!-- Resultados de Búsqueda -->
                    <TitledPane text="Resultados de Búsqueda" expanded="true" style="-fx-font-size: 16px; -fx-font-weight: bold;">
                        <VBox spacing="10.0" style="-fx-padding: 10;">
                            <TableView fx:id="tablaResultadosBusqueda">
                                <columns>
                                    <TableColumn fx:id="colNombreAlojamiento" text="Nombre" prefWidth="180.0" />
                                    <TableColumn fx:id="colTipoAlojamiento" text="Tipo" prefWidth="120.0" />
                                    <TableColumn fx:id="colCiudadAlojamiento" text="Ciudad" prefWidth="120.0" />
                                    <TableColumn fx:id="colPrecioAlojamiento" text="Precio por Noche" prefWidth="130.0" />
                                </columns>
                            </TableView>
                            <Button text="Seleccionar para Reserva" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#seleccionarAlojamientoParaReserva" />
                        </VBox>
                    </TitledPane>
                </VBox>

                <!-- Panel derecho: Mis Reservas -->
                <VBox spacing="20.0" alignment="TOP_CENTER" prefWidth="500.0">
                    <TitledPane text="Mis Reservas" expanded="true" style="-fx-font-size: 16px; -fx-font-weight: bold;">
                        <VBox spacing="10.0" style="-fx-padding: 10;">
                            <TableView fx:id="tablaReservas">
                                <columns>
                                    <TableColumn fx:id="colIdReserva" text="ID" prefWidth="70.0" />
                                    <TableColumn fx:id="colAlojamiento" text="Alojamiento" prefWidth="200.0" />
                                    <TableColumn fx:id="colFechaInicio" text="Fecha Inicio" prefWidth="140.0" />
                                    <TableColumn fx:id="colFechaFin" text="Fecha Fin" prefWidth="140.0" />
                                </columns>
                            </TableView>
                            <HBox spacing="20.0" alignment="CENTER">
                                <Button text="Cancelar Reserva" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#cancelarReserva" />
                                <Button text="Agregar Reseña" style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-font-weight: bold;" onAction="#agregarReseña" />
                            </HBox>
                        </VBox>
                    </TitledPane>
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
