<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.proyectofinal.controladores.RealizarReservaControlador"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Realizar Reserva" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Alojamiento:"/>
        <ComboBox fx:id="comboAlojamientos" promptText="Seleccione un alojamiento"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Fecha de inicio:"/>
        <DatePicker fx:id="fechaInicioReserva"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Fecha de fin:"/>
        <DatePicker fx:id="fechaFinReserva"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Número de huéspedes:"/>
        <Spinner fx:id="spinnerNumHuespedes"/>
    </HBox>

    <Button text="Confirmar Reserva" onAction="#confirmarReserva"/>

</VBox>
