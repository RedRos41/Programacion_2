<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.proyectofinal.controladores.RealizarReservaControlador"
      spacing="15" alignment="CENTER" style="-fx-padding: 20;">

    <!-- Título -->
    <Label text="Realizar Reserva" style="-fx-font-size: 20px; -fx-font-weight: bold;" alignment="CENTER"/>

    <!-- Selección de Alojamiento -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Alojamiento:"/>
        <ComboBox fx:id="comboAlojamientos" promptText="Seleccione un alojamiento" prefWidth="200"/>
    </HBox>

    <!-- Capacidad del Alojamiento -->
    <Label fx:id="lblCapacidad" text="Capacidad Máxima: -" style="-fx-font-size: 14px;"/>

    <!-- Selección de Fechas -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Fecha de Inicio:"/>
        <DatePicker fx:id="fechaInicioReserva"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Fecha de Fin:"/>
        <DatePicker fx:id="fechaFinReserva"/>
    </HBox>

    <!-- Número de Huéspedes -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Número de Huéspedes:"/>
        <Spinner fx:id="spinnerNumHuespedes" prefWidth="100"/>
    </HBox>

    <!-- Botón Confirmar -->
    <Button text="Confirmar Reserva" onAction="#confirmarReserva" style="-fx-font-size: 14px;"/>
</VBox>
