<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.proyectofinal.controladores.EditarPerfilClienteControlador"
            style="-fx-background-color: #f5f5f5;">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 20;" prefWidth="600.0" prefHeight="400.0">

            <!-- Título -->
            <Label text="Editar Perfil del Cliente" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2a2a2a;" />

            <!-- Campos de Texto para Edición -->
            <VBox spacing="15.0" alignment="CENTER_LEFT" style="-fx-padding: 10;">
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <Label text="Nombre:" style="-fx-font-size: 14px;" />
                    <TextField fx:id="txtNombre" promptText="Ingrese su nombre" prefWidth="300.0" style="-fx-background-color: #ffffff;" />
                </HBox>
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <Label text="Email:" style="-fx-font-size: 14px;" />
                    <TextField fx:id="txtEmail" promptText="Ingrese su correo electrónico" prefWidth="300.0" style="-fx-background-color: #ffffff;" />
                </HBox>
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <Label text="Teléfono:" style="-fx-font-size: 14px;" />
                    <TextField fx:id="txtTelefono" promptText="Ingrese su teléfono" prefWidth="300.0" style="-fx-background-color: #ffffff;" />
                </HBox>
            </VBox>

            <!-- Botones de Acción -->
            <HBox spacing="20.0" alignment="CENTER" style="-fx-padding: 10;">
                <Button text="Guardar Cambios" onAction="#guardarCambios"
                        style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" />
                <Button text="Cancelar" onAction="#cancelarEdicion"
                        style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>

            <Separator style="-fx-background-color: #d3d3d3; -fx-padding: 10;" />

            <!-- Botón para Eliminar Cuenta -->
            <Button text="Eliminar Cuenta" onAction="#eliminarCuenta"
                    style="-fx-background-color: #ff4d4d; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" prefWidth="200.0"/>
        </VBox>
    </children>
</AnchorPane>
